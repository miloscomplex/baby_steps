<p><a href="/children">Return to the list of children</a></p>

<h1>Update <%= @child.name %>'s log</h1>
<br>

<form class="create" action="/children/create" method="post">

  <p>
    First Nap:
    <select class="" name="first_nap[time]">
      <option value=""></option>
      <% (7..18).each do |hour| %>
        <% (0..3).each do |minute| %>
          <option value="<%= hour %>:<%= minute == 0 ? "00" : minute * 15 %>">
            <%= hour > 12 ? hour - 12 : hour %>:<%= minute == 0 ? "00" : minute * 15 %> <%= hour < 12 ? "AM" : "PM" %>
          </option>
        <% end %>
      <% end %>
    </select>

    Duration:
    <select name="first_nap[duration]">
      <option value=""></option>
      <%  24.times do |length| %>
        <option value="<%= length * 5 %>"><%= length * 5 %></option>
      <% end %>
    </select><span> minutes</span>

  </p>

